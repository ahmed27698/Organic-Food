generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())
}

model Product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String @unique
  price       Float
  rate        Float
  category    String
  image       String
  description String
  stock       Int
  isFeatured  Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
